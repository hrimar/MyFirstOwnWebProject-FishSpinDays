@model CreateSectionBindingModel
@{
    ViewData["Title"] = "Create section";
}

<h2 class="text-center">Create section</h2>


<div class="jumbotron jumbotron-fluid">
    <form asp-area="Admin" asp-controller="Sections" asp-action="Create" method="post" class="form-horizontal">
      
        <input type="hidden" asp-for="@Model.MainSectionId" />

        @Html.FormGroupFor(model => model.Name)

        <div class="form-group row">
            <div class="col-sm-10 col-sm-push-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-area="Admin" asp-controller="Sections" asp-action="Index" 
                   class="btn btn-default">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
