@page "{id}"
@model AddModel
@{
    ViewData["Title"] = "Add comment";
}
<h2 class="text-center">Add comment</h2>

<div class="jumbotron jumbotron-fluid">
    <form method="post">
        <div class="form-group row">
            <label asp-for="Text" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Text" class="form-control" />
                <span class="text-danger" asp-validation-for="Text"></span>
            </div>
        </div>
        
        <div class="form-group row  text-center">
            <input asp-page-handler="CreateComment" type="submit" value="Add comment" class="btn btn-primary" />
            <a href="/" class="btn btn-outline-dark ">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}